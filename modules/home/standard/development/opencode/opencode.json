{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "plugin": ["@nick-vi/opencode-type-inject", "@mohak34/opencode-notifier@latest"],
  "experimental": {},

  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "websearch_exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa"
    }
  },
  "lsp": {
    "tailwind": {
      "command": ["bun", "x", "tailwindcss-language-server", "--stdio"],
      "extensions": [".tsx"]
    }
  },

  "permission": {
    "bash": {
      "git *": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow"
    }
  }
}
