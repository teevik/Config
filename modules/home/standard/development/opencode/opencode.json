{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "plugin": [
    "oh-my-opencode",
    "@nick-vi/opencode-type-inject",
    "@mohak34/opencode-notifier@latest"
  ],
  "experimental": {},

  "lsp": {
    "tailwind": {
      "command": ["bun", "x", "tailwindcss-language-server", "--stdio"],
      "extensions": [".tsx"]
    }
  },

  "permission": {
    "bash": {
      "git *": "ask",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow"
    }
  }
}
