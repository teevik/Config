{
  "features": {
    "edit_prediction_provider": "codestral"
  },
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions"
    },
    "OpenCode": {
      "command": "opencode",
      "args": ["acp"],
      "default_model": "anthropic/claude-opus-4-5"
    }
  },
  "load_direnv": "direct",
  "edit_predictions": {
    "mode": "subtle"
  },
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-thinking-latest"
    },
    "model_parameters": []
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": "Catppuccin Mocha - No Italics",
  "languages": {
    "Typst": {
      "soft_wrap": "bounded",
      "show_wrap_guides": false
    }
  },
  "lsp": {
    "nil": {
      // or "nixd":
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    },

    "tinymist": {
      "settings": {
        "exportPdf": "onSave",
        "outputPath": "$root/$name"
      }
    }
  },

  "context_servers": {},

  "helix_mode": true,
  "auto_install_extensions": {
    "nix": true,
    "html": true,
    "catppuccin": true,
    "toml": true,
    "dockerfile": true,
    "latex": true,
    "sql": true,
    "cargo-appraiser": true,
    "crates-lsp": true
  }
}
