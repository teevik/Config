{
  "ssh_connections": [
    {
      "host": "desktop",
      "args": [],
      "projects": []
    }
  ],
  "session": {
    "trust_all_worktrees": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions"
    },
    "OpenCode": {
      "command": "opencode",
      "args": ["acp"],
      "default_model": "anthropic/claude-opus-4-5"
    }
  },
  "load_direnv": "direct",
  "edit_predictions": {
    "mode": "subtle"
  },
  "agent": {
    "default_profile": "ask",
    "model_parameters": []
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": "Catppuccin Mocha - No Italics",

  // Editor settings (from nvim config)
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "tab_size": 2,
  "preferred_line_length": 80,
  "current_line_highlight": "all",
  "cursor_blink": false,
  "format_on_save": "on",
  "show_whitespaces": "boundary",
  "inlay_hints": {
    "enabled": false
  },

  "vim": {
    "use_system_clipboard": "never"
  },

  "languages": {
    "Typst": {
      "soft_wrap": "bounded",
      "show_wrap_guides": false
    },
    "Lua": {
      "tab_size": 2,
      "formatter": "language_server"
    },
    "Python": {
      "tab_size": 4,
      "formatter": "language_server"
    },
    "Rust": {
      "tab_size": 4,
      "formatter": "language_server"
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JSONC": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "YAML": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TOML": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "HTML": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "CSS": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "SCSS": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "GraphQL": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Vue.js": {
      "formatter": {
        "external": {
          "command": "oxfmt",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "lsp": {
    "nil": {
      // or "nixd":
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    },
    "tinymist": {
      "settings": {
        "exportPdf": "onSave",
        "outputPath": "$root/$name"
      }
    }
  },

  "context_servers": {},

  "auto_install_extensions": {
    "nix": true,
    "html": true,
    "catppuccin": true,
    "toml": true,
    "dockerfile": true,
    "latex": true,
    "sql": true,
    "cargo-appraiser": true,
    "crates-lsp": true,
    "tsgo": true,
    "wakatime": true,
    "ron": true,
    "hyprlang": true
  }
}
