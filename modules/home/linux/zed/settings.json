{
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "play_sound_when_agent_done": true,
    "default_profile": "write",
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": "Catppuccin Mocha - No Italics",
  "languages": {
    "Typst": {
      "soft_wrap": "bounded",
      "show_wrap_guides": false
    }
  },
  "lsp": {
    "nil": {
      // or "nixd":
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    }
  },

  "context_servers": {},

  "helix_mode": true,
  "auto_install_extensions": {
    "nix": true,
    "html": true,
    "catppuccin": true,
    "toml": true,
    "dockerfile": true,
    "latex": true,
    "sql": true,
    "cargo-appraiser": true,
    "crates-lsp": true
  }
}
