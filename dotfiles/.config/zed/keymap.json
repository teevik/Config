// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "vim_mode == normal",
    "bindings": {
      // File/Project navigation (from nvim <leader>f...)
      "space f f": "file_finder::Toggle",
      "space f g": "pane::DeploySearch",
      "space /": "pane::DeploySearch",
      "space f b": "tab_switcher::Toggle",
      "space f r": "projects::OpenRecent",

      // Explorer (from nvim <leader>e)
      "space e": "workspace::ToggleLeftDock",

      // Git (from nvim <leader>g...)
      "space g s": "git_panel::ToggleFocus",
      "space g b": "git::Branch",

      // Diagnostics (from nvim <leader>sd)
      "space s d": "diagnostics::Deploy",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-d": ["editor::SelectNext", { "replace_newest": false }],
      "ctrl-shift-l": "editor::SelectAllMatches",

      // Toggle comment (from nvim <C-/>)
      "ctrl-/": "editor::ToggleComments",
    },
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      // Yank to system clipboard (from nvim <leader>y)
      "space y": ["workspace::SendKeystrokes", "\" + y"],

      // LSP navigation (from nvim gd, gr, gI, gy)
      "g d": "editor::GoToDefinition",
      "g r": "editor::FindAllReferences",
      "g shift-i": "editor::GoToImplementation",
      "g y": "editor::GoToTypeDefinition",

      // Code action (from nvim <leader>a)
      "space a": "editor::ToggleCodeActions",

      // LSP symbols (from nvim <leader>ss, <leader>sS)
      "space s s": "outline::Toggle",
      "space s shift-s": "project_symbols::Toggle",

      // Buffer operations (from nvim <leader>bc, gn, gp)
      "space b c": "pane::CloseActiveItem",
      "g n": "pane::ActivateNextItem",
      "g p": "pane::ActivatePreviousItem",

      // Rename file (from nvim <leader>cR)
      "space c shift-r": "project_panel::Rename",
    },
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      // Clear search highlight (from nvim <Esc> in normal mode)
      "escape": "editor::Cancel",
    },
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      // Surround with S (vim-surround style)
      "shift-s": "vim::PushAddSurrounds",

      // Open command palette without auto-inserting '<,'>
      ":": "vim::Command",

      // Insert/append directly from visual mode (useful for multi-cursor)
      "i": "vim::InsertBefore",
      "a": "vim::InsertAfter",
    },
  },
  {
    "bindings": {
      "ctrl-alt-o": [
        "agent::NewExternalAgentThread",
        {
          "agent": {
            "custom": {
              "name": "OpenCode",
            },
          },
        },
      ],
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "alt-f": null,
    },
  },
  {
    "bindings": {
      "alt-f": "workspace::ToggleZoom",
    },
  },
]
