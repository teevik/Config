{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",

  "compaction": {
    "auto": false,
    "prune": true
  },

  "plugin": [
    // "oh-my-opencode",
    // "opencode-supermemory@latest",
    "@nick-vi/opencode-type-inject@latest",
    "@mohak34/opencode-notifier@latest",
    // "@plannotator/opencode@latest",
    "opencode-wakatime@latest",
    "@mailshieldai/opencode-canvas@latest"
  ],

  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "websearch_exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa"
    }
  },

  "lsp": {
    "tailwind": {
      "command": ["bun", "x", "tailwindcss-language-server", "--stdio"],
      "extensions": [".tsx"]
    }
  },

  "permission": {
    "bash": {
      "git commit": "ask",
      "git push": "ask"
    },
    "canvas_*": "allow",

    "external_directory": {
      // Safe to read
      "/tmp/*": "allow",
      "/usr/share/*": "allow",
      "/usr/local/share/*": "allow",
      "/var/log/*": "allow",

      // Read-only nix store
      "/nix/store/*": "allow",

      "*": "ask"
    }
  }
}
